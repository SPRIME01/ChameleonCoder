<Window x:Class="ChameleonCoder.Plugins.PluginInstaller"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="300" ShowInTaskbar="False" x:ClassModifier="internal">
    <StackPanel>
        <ListView Name="list" ItemsSource="{Binding Path=plugins}" Height="225">
            <ListView.View>
                <GridView>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Orientation="Horizontal" Height="25" VerticalAlignment="Stretch" HorizontalAlignment="Center">
            <Button Width="75" Content="{Binding Path=lang.Action_Cancel}" Margin="5" IsCancel="True"/><!--cancel-->
            <Button Width="75" Content="{Binding Path=lang.Plugin_InstallSelected}" Margin="5" Click="InstallSelected"/><!--install selected-->
            <Button Width="75" Content="{Binding Path=lang.Plugin_InstallAll}" Margin="5" Click="InstallAll"/><!--install all-->
        </StackPanel>
    </StackPanel>
</Window>
