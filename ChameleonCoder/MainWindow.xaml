<ribbon:RibbonWindow x:Uid="RibbonWindow" x:Class="ChameleonCoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ribbon="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
        xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:res="clr-namespace:ChameleonCoder.Resources.Management"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:bc="clr-namespace:Odyssey.Controls;assembly=Odyssey"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:service="clr-namespace:ChameleonCoder.Services"
        xmlns:cc="clr-namespace:ChameleonCoder"
        Title="CC - ChameleonCoder alpha 1"
        WindowState="Maximized" x:Name="RibbonWindow" Width="1200" Height="800" Icon="Images\logo.ico" xml:lang="en-US"
        Localization.Attributes="$Content(Unreadable Unmodifiable) Language(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) Height(Unreadable Unmodifiable) Width(Unreadable Unmodifiable) Icon(Unreadable Unmodifiable)">
    
    <Window.Resources>
        <ControlTemplate x:Uid="ControlTemplate_1" x:Key="CloseButton" Localization.Attributes="$Content(Unreadable Unmodifiable)">
            <Grid x:Uid="Grid_1">
                <Ellipse x:Uid="Ellipse_1" Width="12" Height="12" Stroke="DarkGray"
                         Localization.Attributes="Height(Unreadable Unmodifiable) Width(Unreadable Unmodifiable) $Content(Unreadable Unmodifiable) Stroke(Unreadable Unmodifiable)"/>
                <TextBlock x:Uid="TextBlock_1" FontSize="12" FontWeight="DemiBold"  Foreground="DarkGray" Text="x" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1"/>
            </Grid>

        </ControlTemplate>
        
       <Style x:Uid="Style_1" TargetType="TabItem">
           
            <Setter x:Uid="Setter_1" Property="HeaderTemplate">
                <Setter.Value>
                    
                    <DataTemplate x:Uid="DataTemplate_1">
                        
                        <StackPanel x:Uid="StackPanel_1" Orientation="Horizontal">
                            
                            <TextBlock x:Uid="TextBlock_2" Text="{Binding Path=Key}" VerticalAlignment="Center" Margin="2"/>
                            
                            <Button x:Uid="Button_1" Template="{StaticResource CloseButton}" HorizontalAlignment="Right"
                                    Click="TabClosed" VerticalAlignment="Center"
                                    Localization.Attributes="$Content(Unreadable Unmodifiable) HorizontalAlignment(Unreadable Unmodifiable) VerticalAlignment(Unreadable Unmodifiable)"/>
                            
                        </StackPanel>
                        
                    </DataTemplate>
                    
                </Setter.Value>
            </Setter>
           
            <Setter x:Uid="Setter_2" Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate x:Uid="DataTemplate_2">
                        <Frame x:Uid="Frame_1" Content="{Binding Path=Value}" NavigationUIVisibility="Hidden"></Frame>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <HierarchicalDataTemplate x:Uid="HierarchicalDataTemplate_1" ItemsSource="{Binding Path=children}" x:Key="resourceTemplate">

            <Grid x:Uid="Grid_2" Margin="3" HorizontalAlignment="Stretch"
                  Localization.Attributes="HorizontalAlignment(Unreadable Unmodifiable) Margin(Unreadable Unmodifiable)">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Uid="ColumnDefinition_1"/>
                    <ColumnDefinition x:Uid="ColumnDefinition_2"/>
                    <ColumnDefinition x:Uid="ColumnDefinition_3"/>
                </Grid.ColumnDefinitions>

                <Border x:Uid="Border_1" Background="Chocolate" Grid.Column="0" Width="20" Height="20" BorderBrush="Black" BorderThickness="0.5"
                        Localization.Attributes="Background(Unreadable Unmodifiable) BorderBrush(Unreadable Unmodifiable) BorderThickness(Unreadable Unmodifiable)
                        Height(Unreadable Unmodifiable) Width(Unreadable Unmodifiable)">
                    
                    <Image x:Uid="Image_1" Source="{Binding Converter={StaticResource ImageConverter}}" Width="19" Height="19"
                           Localization.Attributes="$Content(Unreadable Unmodifiable) Height(Unreadable Unmodifiable) Width(Unreadable Unmodifiable)"/>
                    
                </Border>
                
                <Image x:Uid="Image_2" Source="{Binding Path=SpecialVisualProperty}" Margin="5,0,0,0" Grid.Column="1" MaxWidth="20" MaxHeight="20"
                       Localization.Attributes="$Content(Unreadable Unmodifiable) Margin(Unreadable Unmodifiable) MaxWidth(Unreadable Unmodifiable) MaxHeight(Unreadable Unmodifiable)"/>
                
                <TextBlock x:Uid="TextBlock_3" Grid.Column="2" Text="{Binding Path=Name}" Margin="5,0,0,0"/>
            </Grid>
        </HierarchicalDataTemplate>
    </Window.Resources>
    
    <Grid x:Uid="Grid_3">
        
        <Grid.RowDefinitions>
            
            <RowDefinition x:Uid="RowDefinition_1" Height="Auto"/>
            <RowDefinition x:Uid="RowDefinition_2" Height="Auto"/>
            <RowDefinition x:Uid="RowDefinition_3" Height="Auto"/>
            <RowDefinition x:Uid="RowDefinition_4"/>
            <RowDefinition x:Uid="RowDefinition_5" Height="25"/>
            
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition x:Uid="ColumnDefinition_4" Width="300"/>
            <ColumnDefinition x:Uid="ColumnDefinition_5" Width="*"/>
            <ColumnDefinition x:Uid="ColumnDefinition_6" Width="*"/>
            
        </Grid.ColumnDefinitions>

        <ribbon:Ribbon x:Uid="Ribbon" x:Name="Ribbon" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Grid.RowSpan="1"
                       Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">
            
            <ribbon:Ribbon.ApplicationMenu>
                <ribbon:RibbonApplicationMenu x:Uid="ribbon:RibbonApplicationMenu_1" Localization.Attributes="$Content(Unreadable Unmodifiable)">
                    
                    <ribbon:RibbonApplicationMenu.FooterPaneContent>
                        
                        <StackPanel x:Uid="StackPanel_2" Orientation="Horizontal" HorizontalAlignment="Right">
                            
                            <ribbon:RibbonButton x:Uid="ribbon:RibbonButton_1" Label="Exit" Click="Close" SmallImageSource="Images\RibbonTab1\close.png" MinWidth="100" Height="25"
                                                 Localization.Attributes="$Content(Unreadable Unmodifiable) SmallImageSource(Unreadable Unmodifiable) MinWidth(Unreadable Unmodifiable) Height(Unreadable Unmodifiable)"/>
                            
                            <ribbon:RibbonButton x:Uid="ribbon:RibbonButton_2" Label="Restart" Click="Restart" SmallImageSource="Images\RibbonTab1\restart.png" MinWidth="100" Height="25"
                                                 Localization.Attributes="$Content(Unreadable Unmodifiable) SmallImageSource(Unreadable Unmodifiable) MinWidth(Unreadable Unmodifiable) Height(Unreadable Unmodifiable)"/>
                            
                        </StackPanel>
                        
                    </ribbon:RibbonApplicationMenu.FooterPaneContent>

                    <ribbon:RibbonApplicationMenuItem x:Uid="MenuHome" x:Name="MenuHome" ImageSource="Images\RibbonTab1\home.png" Header="Home" Click="GoHome"
                                                      Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) ImageSource(Unreadable Unmodifiable)"/>
                    
                    <ribbon:RibbonApplicationSplitMenuItem x:Uid="MenuServices" x:Name="MenuServices" ImageSource="Images\LargeIcon.png"
                                                           Header="Services" StaysOpenOnClick="True" Click="LaunchService"
                                                           Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) ImageSource(Unreadable Unmodifiable) StaysOpenOnClick(Unreadable Unmodifiable)">
                        
                        <ribbon:RibbonApplicationSplitMenuItem.ItemTemplate>
                            <DataTemplate x:Uid="DataTemplate_3">
                                
                                <StackPanel x:Uid="StackPanel_3" Orientation="Horizontal">
                                    
                                    <Image x:Uid="Image_3" Source="{Binding Path=Icon}"
                                           Localization.Attributes="$Content(Unreadable Unmodifiable)"/>
                                    
                                    <TextBlock x:Uid="TextBlock_4" Text="{Binding Path=ServiceName}"/>
                                    
                                </StackPanel>
                                
                            </DataTemplate>
                        </ribbon:RibbonApplicationSplitMenuItem.ItemTemplate>
                        
                    </ribbon:RibbonApplicationSplitMenuItem>

                    <ribbon:RibbonSeparator x:Uid="ribbon:RibbonSeparator_1" Localization.Attributes="$Content(Unreadable Unmodifiable)"/>
                    
                    <ribbon:RibbonApplicationSplitMenuItem x:Uid="MenuCreators" x:Name="MenuCreators" ImageSource="Images\RibbonTab1\create.png"
                                                           Header="Create resource" StaysOpenOnClick="True" Click="ResourceCreate"
                                                           Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) ImageSource(Unreadable Unmodifiable) StaysOpenOnClick(Unreadable Unmodifiable)">
                        
                        <ribbon:RibbonApplicationSplitMenuItem.ItemTemplate>
                            <DataTemplate x:Uid="DataTemplate_4">
                                
                                <StackPanel x:Uid="StackPanel_4" Orientation="Horizontal">
                                    
                                    <Image x:Uid="Image_4" Source="{Binding Converter={StaticResource TypeImageConverter}}" Width="25"
                                           Localization.Attributes="$Content(Unreadable Unmodifiable) Width(Unreadable Unmodifiable)"/>
                                    
                                    <TextBlock x:Uid="TextBlock_5" Text="{Binding Converter={StaticResource TypeConverter}}" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                    
                                </StackPanel>
                                
                            </DataTemplate>
                        </ribbon:RibbonApplicationSplitMenuItem.ItemTemplate>
                        
                    </ribbon:RibbonApplicationSplitMenuItem>
                    
                    <ribbon:RibbonApplicationMenuItem x:Uid="MenuImport" x:Name="MenuImport" ImageSource="Images\LargeIcon.png" Header="Import resource"
                                                      Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) ImageSource(Unreadable Unmodifiable)"/>
                    
                    <ribbon:RibbonApplicationMenuItem x:Uid="MenuUnpack" x:Name="MenuUnpack" ImageSource="Images\LargeIcon.png" Header="Unpack resource"
                                                      Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) ImageSource(Unreadable Unmodifiable)"/>

                    <ribbon:RibbonSeparator x:Uid="ribbon:RibbonSeparator_2" Localization.Attributes="$Content(Unreadable Unmodifiable)"/>
                    
                    <ribbon:RibbonApplicationMenuItem x:Uid="MenuHelp" x:Name="MenuHelp" ImageSource="Images\RibbonTab1\help.jpg" Header="Help"
                                                      Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) ImageSource(Unreadable Unmodifiable)"/>
                    
                    <ribbon:RibbonApplicationMenuItem x:Uid="MenuSettings" x:Name="MenuSettings" ImageSource="Images\RibbonTab1\settings.png" Header="Settings"
                                                      Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) ImageSource(Unreadable Unmodifiable)"/>
                    
                    <ribbon:RibbonApplicationMenuItem x:Uid="MenuAbout" x:Name="MenuAbout" ImageSource="Images\RibbonTab1\info.png" Header="About"
                                                      Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) ImageSource(Unreadable Unmodifiable)"/>
                    
                </ribbon:RibbonApplicationMenu>
            </ribbon:Ribbon.ApplicationMenu>
            
            <ribbon:Ribbon.QuickAccessToolBar>
                <ribbon:RibbonQuickAccessToolBar x:Uid="ribbon:RibbonQuickAccessToolBar_1" Localization.Attributes="$Content(Unreadable Unmodifiable)">
                    
                    <ribbon:RibbonButton x:Uid="ribbon:RibbonButton_3" SmallImageSource="Images\RibbonTab1\home.png" Click="GoHome"
                                         Localization.Attributes="$Content(Unreadable Unmodifiable) SmallImageSource(Unreadable Unmodifiable)"/>
                    
                </ribbon:RibbonQuickAccessToolBar>
            </ribbon:Ribbon.QuickAccessToolBar>

            <ribbon:Ribbon.ContextualTabGroups>
                <ribbon:RibbonContextualTabGroup x:Uid="contextResourceList" Header="resource list" x:Name="contextResourceList"
                                                 Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)"/>
                
                <ribbon:RibbonContextualTabGroup x:Uid="contextEditing" Header="editing tools" x:Name="contextEditing"
                                                 Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)"/>
                
                <ribbon:RibbonContextualTabGroup x:Uid="contextResourceView" Header="resource tools" x:Name="contextResourceView"
                                                 Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)"/>
            </ribbon:Ribbon.ContextualTabGroups>
            
            <ribbon:RibbonTab x:Uid="HomeTab" x:Name="HomeTab" Header="Home"
                              Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">
                
            </ribbon:RibbonTab>
            
            <ribbon:RibbonTab x:Uid="ResourceListTab" x:Name="ResourceListTab" ContextualTabGroupHeader="{Binding ElementName=contextResourceList, Path=Header}" Header="View Utilities"
                              Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">

                <ribbon:RibbonGroup x:Uid="ribbon:RibbonGroup_1" Localization.Attributes="$Content(Unreadable Unmodifiable)">
                    
                    <ribbon:RibbonToggleButton x:Uid="EnableGroups" x:Name="EnableGroups" Label="enable grouping" LargeImageSource="Images\LargeIcon.png"
                                               Unchecked="GroupsChanged" Checked="GroupsChanged" IsChecked="True"
                                               Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) LargeImageSource(Unreadable Unmodifiable) IsChecked(Unreadable Unmodifiable)"/>
                    
                    <ribbon:RibbonMenuButton x:Uid="ribbon:RibbonMenuButton_1" Label="hidden resource types" SmallImageSource="Images\LargeIcon.png" Margin="5"
                                             Localization.Attributes="$Content(Unreadable Unmodifiable) SmallImageSource(Unreadable Unmodifiable) Margin(Unreadable Unmodifiable)">
                        
                        <ribbon:RibbonGallery x:Uid="visTypes" SelectionChanged="FilterChanged" x:Name="visTypes">
                            
                            <ribbon:RibbonGallery.ItemTemplate>
                                <DataTemplate x:Uid="DataTemplate_5">
                                    
                                    <ribbon:RibbonGalleryItem x:Uid="ribbon:RibbonGalleryItem_1">
                                        
                                        <StackPanel x:Uid="StackPanel_5" Orientation="Horizontal">
                                            
                                            <ribbon:RibbonCheckBox x:Uid="ribbon:RibbonCheckBox_1" Margin="1,1,5,1" Checked="FilterChanged" Unchecked="FilterChanged"
                                                                   Localization.Attributes="Margin(Unreadable Unmodifiable)"/>
                                            
                                            <TextBlock x:Uid="TextBlock_6" Text="{Binding Converter={StaticResource TypeConverter}}"/>
                                            
                                        </StackPanel>
                                    </ribbon:RibbonGalleryItem>
                                    
                                </DataTemplate>
                            </ribbon:RibbonGallery.ItemTemplate>
                            
                       </ribbon:RibbonGallery>
                        
                    </ribbon:RibbonMenuButton>
                    
                    <ribbon:RibbonToggleButton x:Uid="ShowLinks" x:Name="ShowLinks"
                            Label="show links" SmallImageSource="Images\SmallIcon.png"
                            Unchecked="FilterChanged" Checked="FilterChanged" IsChecked="False" Margin="5,5,5,5"/>
                    
                </ribbon:RibbonGroup>
                
                <ribbon:RibbonGroup x:Uid="CustomGroup1" x:Name="CustomGroup1" Header="custom"
                                    Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)"/>
                
            </ribbon:RibbonTab>

            <ribbon:RibbonTab x:Uid="EditTab" x:Name="EditTab" Header="Editing"
                          ContextualTabGroupHeader="{Binding ElementName=contextEditing, Path=Header}"
                          Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">
                
                <ribbon:RibbonGroup x:Uid="Group3" x:Name="Group3" Header="clipboard"
                                    Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">
                    
                    <ribbon:RibbonButton x:Uid="PasteButton" x:Name="PasteButton"
                                         LargeImageSource="Images\RibbonTab2\paste.png"
                                         Label="Insert" />
                    
                    <ribbon:RibbonButton x:Uid="CutButton" x:Name="CutButton" SmallImageSource="Images\RibbonTab2\cut.png" Label="Cut"
                                         Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) SmallImageSource(Unreadable Unmodifiable)"/>
                    
                    <ribbon:RibbonButton x:Uid="CopyButton" x:Name="CopyButton"
                                         SmallImageSource="Images\RibbonTab2\copy.png" Label="Copy"
                                         Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) SmallImageSource(Unreadable Unmodifiable)"/>
                    
                    <ribbon:RibbonButton x:Uid="DeleteButton" x:Name="DeleteButton" SmallImageSource="Images\RibbonTab2\delete.png" Label="Delete"
                                         Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) SmallImageSource(Unreadable Unmodifiable)"/>
                    
                </ribbon:RibbonGroup>
                
                <ribbon:RibbonGroup x:Uid="Group4" x:Name="Group4" Header="View"
                                    Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">
                    
                    <ribbon:RibbonButton x:Uid="ViewPlusButton" x:Name="ViewPlusButton"
                                             SmallImageSource="Images\RibbonTab2\viewplus.png"
                                             Label="plus" />
                    <ribbon:RibbonButton x:Uid="ViewMinusButton" x:Name="ViewMinusButton"
                                             SmallImageSource="Images\RibbonTab2\viewminus.png"
                                             Label="minus"/>
                </ribbon:RibbonGroup>
                
                <ribbon:RibbonGroup x:Uid="Group5" x:Name="Group5" Header="Undo and redo"
                                    Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">
                    
                    <ribbon:RibbonButton x:Uid="UndoButton" x:Name="UndoButton"
                                         SmallImageSource="Images\RibbonTab2\undo.png"
                                         Label="Undo"/>
                    
                    <ribbon:RibbonButton x:Uid="RedoButton" x:Name="RedoButton"
                                         SmallImageSource="Images\RibbonTab2\redo.png"
                                         Label="Redo"/>
                </ribbon:RibbonGroup>
                
                <ribbon:RibbonGroup x:Uid="ribbon:RibbonGroup_2">
                    
                    <ribbon:RibbonButton x:Uid="ribbon:RibbonButton_4" Label="Save" LargeImageSource="Images\RibbonTab2\filesave.png" Click="ResourceSave"
                                         Localization.Attributes="Label(Readable Modifiable)"/>
                    
                </ribbon:RibbonGroup>
                
                
                <ribbon:RibbonGroup x:Uid="Group6" x:Name="Group6" Header="Search and Replace"
                                    Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">
                    
                    <ribbon:RibbonButton x:Uid="SearchButton" x:Name="SearchButton" Label="search" SmallImageSource="Images\RibbonTab2\search.png"
                                         Localization.Attributes="Label(Readable Modifiable)"/>
                    
                    <ribbon:RibbonButton x:Uid="ReplaceButton" x:Name="ReplaceButton" 
                                         Label="replace" SmallImageSource="Images\RibbonTab2\search.png"
                                         Localization.Attributes="SmallImageSource(Unreadable Unmodifiable)"/>
                </ribbon:RibbonGroup>
                <ribbon:RibbonGroup x:Uid="Group7" x:Name="Group7" Header="Code-specific"
                                    Localization.Attributes="$Content(Unreadable Unmodifiable)">

                    <ribbon:RibbonMenuButton
                            x:Uid="ribbon:RibbonMenuButton_2" LargeImageSource="Images\LargeIcon.png" Label="new element"
                            ToolTipTitle="creates a new code element" ToolTipDescription="creates a new code lement, such as a function, a class, a label, ..." ToolTipImageSource="Images\info.png"
                            Localization.Attributes="ToolTipImageSource(Unreadable Unmodifiable) LargeImageSource(Unreadable Unmodifiable) Label(Readable Modifiable) ToolTipTitle(Readable Modifiable) ToolTipDescription(Readable Modifiable)">

                        <ribbon:RibbonGallery x:Uid="ribbon:RibbonGallery_1" MaxHeight="250" MaxColumnCount="8"
                                              Localization.Attributes="$Content(Unreadable Unmodifiable) MaxHeight(Unreadable Unmodifiable)">
                            
                            <ribbon:RibbonGalleryCategory x:Uid="StubCreators" HorizontalContentAlignment="Stretch" MinColumnCount="3" x:Name="StubCreators">
                                
                                <ribbon:RibbonGalleryCategory.ItemTemplate>
                                    <DataTemplate x:Uid="DataTemplate_6">
                                        
                                        <Grid x:Uid="Grid_4" Width="75" Height="75"
                                              Localization.Attributes="Height(Unreadable Unmodifiable) Width(Unreadable Unmodifiable)">
                                            
                                            <Grid.RowDefinitions>
                                                <RowDefinition x:Uid="RowDefinition_6" Height="*"/>
                                                <RowDefinition x:Uid="RowDefinition_7" Height="*"/>
                                            </Grid.RowDefinitions>
                                            
                                            <Image x:Uid="Image_5" Grid.Row="0" Source="{Binding Path=Value}"
                                                   Localization.Attributes="$Content(Unreadable Unmodifiable)"/>
                                            
                                            <TextBlock x:Uid="TextBlock_7" Grid.Row="1" Text="{Binding Path=Key}" HorizontalAlignment="Center"
                                                       Localization.Attributes="$HorizontalAlignment(Unreadable Unmodifiable) Grid.Row(Unreadable Unmodifiable)"/>
                                                                                        
                                        </Grid>
                                        
                                    </DataTemplate>
                                </ribbon:RibbonGalleryCategory.ItemTemplate>
                                
                            </ribbon:RibbonGalleryCategory>
                            
                        </ribbon:RibbonGallery>
                        
                    </ribbon:RibbonMenuButton>
                    
                </ribbon:RibbonGroup>
                
                <ribbon:RibbonGroup x:Uid="CustomGroup2" x:Name="CustomGroup2" Header="custom"
                                    Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)"
                                    Localization.Comments="$Header(the RibbonGroup name for the group with plugin-registered buttons)">
                </ribbon:RibbonGroup>
            </ribbon:RibbonTab>

            <ribbon:RibbonTab x:Uid="ResourceViewTab" x:Name="ResourceViewTab" Header="Resource" ContextualTabGroupHeader="{Binding ElementName=contextResourceView, Path=Header}"
                              Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">
                <ribbon:RibbonGroup x:Uid="Group8" x:Name="Group8" Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">
                    
                    <ribbon:RibbonMenuButton x:Uid="AddChildResource" x:Name="AddChildResource" Label="Add child resource" LargeImageSource="Images\LargeIcon.png"
                                             Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) LargeImageSource(Unreadable Unmodifiable)"
                                             Localization.Comments="Label(the button text for adding a child resource)">
                        
                        <ribbon:RibbonMenuButton.ItemTemplate>
                            <DataTemplate x:Uid="DataTemplate_7">
                                
                                <StackPanel x:Uid="StackPanel_6" Orientation="Horizontal"
                                            Localization.Attributes="$Orientation(Unreadable Unmodifiable)">
                                    
                                    <Image x:Uid="Image_6" Source="{Binding Converter={StaticResource TypeImageConverter}}"
                                           Localization.Attributes="$Content(Unreadable Unmodifiable)"/>
                                    
                                    <TextBlock x:Uid="TextBlock_8" Text="{Binding Converter={StaticResource TypeConverter}}"
                                               Localization.Attributes="$Content(Unreadable Unmodifiable)"/>
                                </StackPanel>
                                
                            </DataTemplate>
                        </ribbon:RibbonMenuButton.ItemTemplate>
                        
                    </ribbon:RibbonMenuButton>
                    
                    <ribbon:RibbonButton x:Uid="ribbon:RibbonButton_5" SmallImageSource="Images\SmallIcon.png" Label="Move"
                                         Localization.Attributes="$Content(Unreadable Unmodifiable) SmallImageSource(Unreadable Unmodifiable) Label(Readable Modifiable)"
                                         Localization.Comments="Label(the button text for moving a resource)"/>
                    
                    <ribbon:RibbonButton x:Uid="ribbon:RibbonButton_6" SmallImageSource="Images\SmallIcon.png" Label="Delete" Click="ResourceDelete"
                                         Localization.Attributes="$Content(Unreadable Unmodifiable) SmallImageSource(Unreadable Unmodifiable) Label(Readable Modifiable)"
                                         Localization.Comments="Label(the button text for deleting a resource)"/>
                </ribbon:RibbonGroup>
                
                <ribbon:RibbonGroup x:Uid="ribbon:RibbonGroup_3">
                    <ribbon:RibbonButton x:Uid="OpenEdit" x:Name="OpenEdit"
                                         Label="Edit"
                                         LargeImageSource="Images\RibbonTab3\edit.png"
                                         Click="ResourceEdit"/>
                    
                </ribbon:RibbonGroup>
                <ribbon:RibbonGroup x:Uid="CustomGroup3" x:Name="CustomGroup3" Header="custom"/>
            </ribbon:RibbonTab>
        </ribbon:Ribbon>

        <cc:CCResourceCatalog x:Uid="TreeView" Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="3"
                              x:Name="TreeView" MouseDoubleClick="ResourceOpen"
                              ImportDropped="True"/>
        
        <bc:BreadcrumbBar x:Uid="breadcrumb" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="5" x:Name="breadcrumb"
                          Root="{x:Type res:ResourceManager}"
                          Path="CC\"
                          Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) Path(Unreadable Unmodifiable) Margin(Unreadable Unmodifiable)">
            
            <bc:BreadcrumbBar.Buttons>

                <Button x:Uid="Button_2" Localization.Attributes="$Content(Unreadable Unmodifiable)">
                    
                    <Image x:Uid="Image_7" Source="Images\view.png" Width="20"
                           Localization.Attributes="$Content(Unreadable Unmodifiable) Source(Unreadable Unmodifiable) Width(Unreadable Unmodifiable)"/>
                    
                </Button>
                
            </bc:BreadcrumbBar.Buttons>
            
        </bc:BreadcrumbBar>
        
        <TabControl x:Uid="Tabs" x:Name="Tabs" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="3" SelectionChanged="TabChanged"
                    IsSynchronizedWithCurrentItem="True">
            <TabControl.Background>
                
                <VisualBrush x:Uid="VisualBrush_1" Stretch="None">
                    <VisualBrush.Visual>
                        
                        <Grid x:Uid="Grid_5" HorizontalAlignment="Stretch"
                              Localization.Attributes="HorizontalAlignment(Unreadable Unmodifiable)">
                            
                            <Grid.Background>
                                <SolidColorBrush x:Uid="SolidColorBrush_1" Color="Aqua"/>
                            </Grid.Background>
                            
                            <TextBlock x:Uid="TextBlock_9" Text="no tabs opened" FontSize="16pt" MaxHeight="200" HorizontalAlignment="Center"/>
                            
                        </Grid>
                        
                    </VisualBrush.Visual>
                </VisualBrush>
                
            </TabControl.Background>
        </TabControl>

        <StatusBar x:Uid="StatusBar_1" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="5" Grid.RowSpan="1">
            
            <StatusBarItem x:Uid="StatusBarItem_1">
                
                <StackPanel x:Uid="StackPanel_7" Orientation="Horizontal">
                    
