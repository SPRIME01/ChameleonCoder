<odc:RibbonWindow x:Uid="RibbonWindow" x:Class="ChameleonCoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:res="clr-namespace:ChameleonCoder.Resources.Management"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:odc="clr-namespace:Odyssey.Controls;assembly=Odyssey"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:service="clr-namespace:ChameleonCoder.Services"
        xmlns:cc="clr-namespace:ChameleonCoder"
        xmlns:inter="clr-namespace:ChameleonCoder.Interaction"
        Title="CC - ChameleonCoder alpha 1" IsGlassEnabled="True"
        WindowState="Maximized" x:Name="RibbonWindow" Width="1200" Height="800" Icon="Images\logo.ico" xml:lang="en-US"
        Localization.Attributes="$Content(Unreadable Unmodifiable) Language(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) Height(Unreadable Unmodifiable) Width(Unreadable Unmodifiable) Icon(Unreadable Unmodifiable)">
    
    <odc:RibbonWindow.Resources>
        <ControlTemplate x:Uid="ControlTemplate_1" x:Key="CloseButton" Localization.Attributes="$Content(Unreadable Unmodifiable)">
            <Grid x:Uid="Grid_1">
                <Ellipse x:Uid="Ellipse_1" Width="12" Height="12" Stroke="DarkGray"
                         Localization.Attributes="Height(Unreadable Unmodifiable) Width(Unreadable Unmodifiable) $Content(Unreadable Unmodifiable) Stroke(Unreadable Unmodifiable)"/>
                <TextBlock x:Uid="TextBlock_1" FontSize="12" FontWeight="DemiBold"  Foreground="DarkGray" Text="x" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1"/>
            </Grid>

        </ControlTemplate>
        
       <Style x:Uid="Style_1" TargetType="TabItem">
           
            <Setter x:Uid="Setter_1" Property="HeaderTemplate">
                <Setter.Value>
                    
                    <DataTemplate x:Uid="DataTemplate_1">
                        
                        <StackPanel x:Uid="StackPanel_1" Orientation="Horizontal">
                            
                            <TextBlock x:Uid="TextBlock_2" Text="{Binding Path=Title}" VerticalAlignment="Center" Margin="2"/>
                            
                            <Button x:Uid="Button_1" Template="{StaticResource CloseButton}" HorizontalAlignment="Right"
                                    Click="TabClosed" VerticalAlignment="Center"
                                    Localization.Attributes="$Content(Unreadable Unmodifiable) HorizontalAlignment(Unreadable Unmodifiable) VerticalAlignment(Unreadable Unmodifiable)"/>
                            
                        </StackPanel>
                        
                    </DataTemplate>
                    
                </Setter.Value>
            </Setter>
           
            <Setter x:Uid="Setter_2" Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate x:Uid="DataTemplate_2">
                        <Frame x:Uid="Frame_1" Content="{Binding Path=Content}" NavigationUIVisibility="Hidden"></Frame>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <HierarchicalDataTemplate x:Uid="HierarchicalDataTemplate_1" ItemsSource="{Binding Path=children}" x:Key="resourceTemplate">

            <Grid x:Uid="Grid_2" Margin="3" HorizontalAlignment="Stretch"
                  Localization.Attributes="HorizontalAlignment(Unreadable Unmodifiable) Margin(Unreadable Unmodifiable)">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Uid="ColumnDefinition_1"/>
                    <ColumnDefinition x:Uid="ColumnDefinition_2"/>
                    <ColumnDefinition x:Uid="ColumnDefinition_3"/>
                </Grid.ColumnDefinitions>

                <Border x:Uid="Border_1" Background="Chocolate" Grid.Column="0" Width="20" Height="20" BorderBrush="Black" BorderThickness="0.5"
                        Localization.Attributes="Background(Unreadable Unmodifiable) BorderBrush(Unreadable Unmodifiable) BorderThickness(Unreadable Unmodifiable)
                        Height(Unreadable Unmodifiable) Width(Unreadable Unmodifiable)">
                    
                    <Image x:Uid="Image_1" Source="{Binding Converter={StaticResource ImageConverter}}" Width="19" Height="19"
                           Localization.Attributes="$Content(Unreadable Unmodifiable) Height(Unreadable Unmodifiable) Width(Unreadable Unmodifiable)"/>
                    
                </Border>
                
                <Image x:Uid="Image_2" Source="{Binding Path=SpecialVisualProperty}" Margin="5,0,0,0" Grid.Column="1" MaxWidth="20" MaxHeight="20"
                       Localization.Attributes="$Content(Unreadable Unmodifiable) Margin(Unreadable Unmodifiable) MaxWidth(Unreadable Unmodifiable) MaxHeight(Unreadable Unmodifiable)"/>
                
                <TextBlock x:Uid="TextBlock_3" Grid.Column="2" Text="{Binding Path=Name}" Margin="5,0,0,0"/>
            </Grid>
        </HierarchicalDataTemplate>
    </odc:RibbonWindow.Resources>
    
    <Grid x:Uid="Grid_3">
        
        <Grid.RowDefinitions>
            
            <RowDefinition x:Uid="RowDefinition_1" Height="Auto"/>
            <RowDefinition x:Uid="RowDefinition_2" Height="Auto"/>
            <RowDefinition x:Uid="RowDefinition_3" Height="Auto"/>
            <RowDefinition x:Uid="RowDefinition_4"/>
            <RowDefinition x:Uid="RowDefinition_5" Height="25"/>
            
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition x:Uid="ColumnDefinition_4" Width="300"/>
            <ColumnDefinition x:Uid="ColumnDefinition_5" Width="*"/>
            <ColumnDefinition x:Uid="ColumnDefinition_6" Width="*"/>
            
        </Grid.ColumnDefinitions>

        <odc:RibbonBar x:Uid="Ribbon" x:Name="Ribbon" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Grid.RowSpan="1"
                       Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">
            
            <odc:RibbonBar.ApplicationMenu>
                <odc:RibbonApplicationMenu x:Uid="ribbon:RibbonApplicationMenu_1" Localization.Attributes="$Content(Unreadable Unmodifiable)" MenuButtonImage="Images\logo.ico">
                    
                    <odc:RibbonApplicationMenu.Footer>
                        
                        <StackPanel x:Uid="StackPanel_2" Orientation="Horizontal" HorizontalAlignment="Right">

                            <odc:RibbonButton x:Uid="ribbon:RibbonButton_2" Foreground="Black" Content="Restart" Click="Restart" SmallImage="Images\RibbonTab1\restart.png" MinWidth="100"
                                              odc:RibbonBar.Size="Medium" Localization.Attributes="$Content(Unreadable Unmodifiable) SmallImage(Unreadable Unmodifiable) MinWidth(Unreadable Unmodifiable)"/>
                            
                            <odc:RibbonButton x:Uid="ribbon:RibbonButton_1" Foreground="Black" Content="Exit" Click="Close" SmallImage="Images\RibbonTab1\close.png" MinWidth="100"
                                              odc:RibbonBar.Size="Medium" Localization.Attributes="$Content(Unreadable Unmodifiable) SmallImage(Unreadable Unmodifiable) MinWidth(Unreadable Unmodifiable)"/>
                            
                        </StackPanel>
                        
                    </odc:RibbonApplicationMenu.Footer>

                    <odc:RibbonApplicationMenuItem x:Uid="MenuHome" x:Name="MenuHome" Image="Images\home.png" Header="Home" Click="GoHome"
                                                   Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) Image(Unreadable Unmodifiable)"/>
                    
                    <odc:RibbonApplicationMenuItem x:Uid="MenuServices" x:Name="MenuServices" Image="Images\LargeIcon.png"
                                                   Header="Services" StaysOpenOnClick="True" Click="LaunchService"
                                                   Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) Image(Unreadable Unmodifiable) StaysOpenOnClick(Unreadable Unmodifiable)"/>

                    <odc:RibbonSeparator x:Uid="ribbon:RibbonSeparator_1" Localization.Attributes="$Content(Unreadable Unmodifiable)"/>
                    
                    <odc:RibbonApplicationMenuItem x:Uid="MenuCreators" x:Name="MenuCreators" Image="Images\RibbonTab1\create.png"
                                                   Header="Create resource" StaysOpenOnClick="True" Click="ResourceCreate" SubMenuTitle="available types"
                                                   Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) Image(Unreadable Unmodifiable) StaysOpenOnClick(Unreadable Unmodifiable)"/>
                    
                    <odc:RibbonApplicationMenuItem x:Uid="MenuImport" x:Name="MenuImport" Image="Images\LargeIcon.png" Header="Import resource"
                                                   Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) Image(Unreadable Unmodifiable)"/>
                    
                    <odc:RibbonApplicationMenuItem x:Uid="MenuPack" x:Name="MenuPack" Image="Images\LargeIcon.png" Header="Package resources" Click="ResourcesPackage"/>
                    
                    <odc:RibbonApplicationMenuItem x:Uid="MenuUnpack" x:Name="MenuUnpack" Image="Images\LargeIcon.png" Header="Unpackage resources" Click="ResourcesUnpackage" 
                                                   Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) Image(Unreadable Unmodifiable)"/>

                    <odc:RibbonSeparator x:Uid="ribbon:RibbonSeparator_2" Localization.Attributes="$Content(Unreadable Unmodifiable)"/>

                    <odc:RibbonApplicationMenuItem x:Uid="MenuHelp" x:Name="MenuHelp" Image="Images\RibbonTab1\help.jpg" Header="Help"
                                                   Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) Image(Unreadable Unmodifiable)"/>

                    <odc:RibbonApplicationMenuItem x:Uid="MenuSettings" x:Name="MenuSettings" Image="Images\RibbonTab1\settings.png" Header="Settings" Click="GoSettings"
                                                   Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) Image(Unreadable Unmodifiable)"/>

                    <odc:RibbonApplicationMenuItem x:Uid="MenuAbout" x:Name="MenuAbout" Image="Images\RibbonTab1\info.png" Header="About"
                                                   Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) Image(Unreadable Unmodifiable)"/>
                    
                </odc:RibbonApplicationMenu>
            </odc:RibbonBar.ApplicationMenu>
            
            <odc:RibbonBar.QAToolBar>
                <odc:RibbonQAToolBar x:Uid="ribbon:RibbonQuickAccessToolBar_1" Localization.Attributes="$Content(Unreadable Unmodifiable)">
                    
                    <odc:RibbonButton x:Uid="ribbon:RibbonButton_3" SmallImage="Images\home.png" Click="GoHome"
                                         Localization.Attributes="$Content(Unreadable Unmodifiable) SmallImageSource(Unreadable Unmodifiable)"/>

                </odc:RibbonQAToolBar>
            </odc:RibbonBar.QAToolBar>

            <odc:RibbonBar.ContextualTabSets>
                
                <odc:RibbonContextualTabSet x:Uid="contextResourceList"
                                                 Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">
                    <odc:RibbonTabItem x:Uid="ResourceListTab" x:Name="ResourceListTab" Title="View Utilities"
                              Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">

                        <odc:RibbonGroup x:Uid="ribbon:RibbonGroup_1" Localization.Attributes="$Content(Unreadable Unmodifiable)">

                            <odc:RibbonToggleButton x:Uid="EnableGroups" x:Name="EnableGroups" Content="enable grouping" LargeImage="Images\LargeIcon.png"
                                               Unchecked="GroupsChanged" Checked="GroupsChanged" IsChecked="True"
                                               Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) LargeImageSource(Unreadable Unmodifiable) IsChecked(Unreadable Unmodifiable)"/>

                            <odc:RibbonDropDownButton x:Uid="ribbon:RibbonMenuButton_1" Content="hidden resource types" SmallImage="Images\LargeIcon.png" Margin="5"
                                             Localization.Attributes="$Content(Unreadable Unmodifiable) SmallImage(Unreadable Unmodifiable) Margin(Unreadable Unmodifiable)"
                                             x:Name="visTypes">

                                <odc:RibbonDropDownButton.ItemTemplate>
                                    <DataTemplate x:Uid="DataTemplate_5">

                                        <StackPanel x:Uid="StackPanel_5" Orientation="Horizontal">

                                            <CheckBox x:Name="myChecker" x:Uid="ribbon:RibbonCheckBox_1" Margin="1,1,5,1" Checked="FilterChanged" Unchecked="FilterChanged"
                                                                   Localization.Attributes="Margin(Unreadable Unmodifiable)" Content="{Binding Converter={StaticResource TypeConverter}}"/>

                                        </StackPanel>

                                    </DataTemplate>
                                </odc:RibbonDropDownButton.ItemTemplate>

                            </odc:RibbonDropDownButton>

                            <odc:RibbonToggleButton x:Uid="ShowLinks" x:Name="ShowLinks"
                            Content="show links" SmallImage="Images\SmallIcon.png"
                            Unchecked="FilterChanged" Checked="FilterChanged" IsChecked="False" Margin="5,5,5,5"/>

                        </odc:RibbonGroup>

                        <odc:RibbonGroup x:Uid="CustomGroup1" x:Name="CustomGroup1" Title="custom"
                                    Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)"/>

                    </odc:RibbonTabItem>
                </odc:RibbonContextualTabSet>

                <odc:RibbonContextualTabSet x:Uid="contextEditing" x:Name="contextEditing"
                                                 Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">
                    <odc:RibbonTabItem x:Uid="EditTab" x:Name="EditTab" Title="Editing"
                          Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">

                        <odc:RibbonGroup x:Uid="Group3" x:Name="Group3" Title="clipboard"
                                    Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">

                            <odc:RibbonButton x:Uid="PasteButton" x:Name="PasteButton"
                                         LargeImage="Images\RibbonTab2\paste.png"
                                         Content="Insert" />

                            <odc:RibbonButton x:Uid="CutButton" x:Name="CutButton" SmallImage="Images\RibbonTab2\cut.png" Content="Cut"
                                         Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) SmallImageSource(Unreadable Unmodifiable)"/>

                            <odc:RibbonButton x:Uid="CopyButton" x:Name="CopyButton"
                                         SmallImage="Images\RibbonTab2\copy.png" Content="Copy"
                                         Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) SmallImageSource(Unreadable Unmodifiable)"/>

                            <odc:RibbonButton x:Uid="DeleteButton" x:Name="DeleteButton" SmallImage="Images\RibbonTab2\delete.png" Content="Delete"
                                         Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) SmallImageSource(Unreadable Unmodifiable)"/>

                        </odc:RibbonGroup>

                        <odc:RibbonGroup x:Uid="Group4" x:Name="Group4" Title="View"
                                    Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">

                            <odc:RibbonButton x:Uid="ViewPlusButton" x:Name="ViewPlusButton"
                                             SmallImage="Images\RibbonTab2\viewplus.png"
                                             Content="plus" />
                            <odc:RibbonButton x:Uid="ViewMinusButton" x:Name="ViewMinusButton"
                                             SmallImage="Images\RibbonTab2\viewminus.png"
                                             Content="minus"/>
                        </odc:RibbonGroup>

                        <odc:RibbonGroup x:Uid="Group5" x:Name="Group5" Title="Undo and redo"
                                    Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">

                            <odc:RibbonButton x:Uid="UndoButton" x:Name="UndoButton"
                                         SmallImage="Images\RibbonTab2\undo.png"
                                         Content="Undo"/>

                            <odc:RibbonButton x:Uid="RedoButton" x:Name="RedoButton"
                                         SmallImage="Images\RibbonTab2\redo.png"
                                         Content="Redo"/>
                        </odc:RibbonGroup>

                        <odc:RibbonGroup x:Uid="ribbon:RibbonGroup_2">

                            <odc:RibbonButton x:Uid="ribbon:RibbonButton_4" Content="Save" LargeImage="Images\RibbonTab2\filesave.png" Click="ResourceSave"
                                         Localization.Attributes="Label(Readable Modifiable)"/>

                        </odc:RibbonGroup>


                        <odc:RibbonGroup x:Uid="Group6" x:Name="Group6" Title="Search and Replace"
                                    Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">

                            <odc:RibbonButton x:Uid="SearchButton" x:Name="SearchButton" Content="search" SmallImage="Images\RibbonTab2\search.png"
                                         Localization.Attributes="Label(Readable Modifiable)"/>

                            <odc:RibbonButton x:Uid="ReplaceButton" x:Name="ReplaceButton" 
                                         Content="replace" SmallImage="Images\RibbonTab2\search.png"
                                         Localization.Attributes="SmallImageSource(Unreadable Unmodifiable)"/>
                        </odc:RibbonGroup>
                        
                        <odc:RibbonGroup x:Uid="Group7" x:Name="Group7" Title="Code-specific"
                                    Localization.Attributes="$Content(Unreadable Unmodifiable)">

                            <odc:RibbonDropDownButton x:Name="StubCreators"
                            x:Uid="ribbon:RibbonMenuButton_2" LargeImage="Images\LargeIcon.png" Content="new element"
                            Localization.Attributes="ToolTipImageSource(Unreadable Unmodifiable) LargeImageSource(Unreadable Unmodifiable) Label(Readable Modifiable) ToolTipTitle(Readable Modifiable) ToolTipDescription(Readable Modifiable)">

                                <odc:RibbonDropDownButton.ItemTemplate>
                                    <DataTemplate x:Uid="DataTemplate_6">

                                        <Grid x:Uid="Grid_4" Width="75" Height="75"
                                              Localization.Attributes="Height(Unreadable Unmodifiable) Width(Unreadable Unmodifiable)">

                                            <Grid.RowDefinitions>
                                                <RowDefinition x:Uid="RowDefinition_6" Height="*"/>
                                                <RowDefinition x:Uid="RowDefinition_7" Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Image x:Uid="Image_5" Grid.Row="0" Source="{Binding Path=Value}"
                                                   Localization.Attributes="$Content(Unreadable Unmodifiable)"/>

                                            <TextBlock x:Uid="TextBlock_7" Grid.Row="1" Text="{Binding Path=Key}" HorizontalAlignment="Center"
                                                       Localization.Attributes="$HorizontalAlignment(Unreadable Unmodifiable) Grid.Row(Unreadable Unmodifiable)"/>

                                        </Grid>

                                    </DataTemplate>
                                </odc:RibbonDropDownButton.ItemTemplate>

                            </odc:RibbonDropDownButton>

                        </odc:RibbonGroup>

                        <odc:RibbonGroup x:Uid="CustomGroup2" x:Name="CustomGroup2" Title="custom"
                                    Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)"
                                    Localization.Comments="$Header(the RibbonGroup name for the group with plugin-registered buttons)">
                        </odc:RibbonGroup>
                    </odc:RibbonTabItem>
                </odc:RibbonContextualTabSet>

                <odc:RibbonContextualTabSet x:Uid="contextResourceView" x:Name="contextResourceView"
                                            Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">
                    
                    <odc:RibbonTabItem x:Uid="ResourceViewTab" x:Name="ResourceViewTab" Title="Resource"
                              Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">
                        <odc:RibbonGroup x:Uid="Group8" x:Name="Group8" Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">

                            <odc:RibbonDropDownButton x:Uid="AddChildResource" x:Name="AddChildResource" Content="Add child resource" LargeImage="Images\LargeIcon.png"
                                             Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) LargeImageSource(Unreadable Unmodifiable)"
                                             Localization.Comments="Label(the button text for adding a child resource)"/>

                            <odc:RibbonButton x:Uid="ribbon:RibbonButton_5" SmallImage="Images\SmallIcon.png" Content="Move"
                                         Localization.Attributes="$Content(Unreadable Unmodifiable) SmallImageSource(Unreadable Unmodifiable) Label(Readable Modifiable)"
                                         Localization.Comments="Label(the button text for moving a resource)"/>

                            <odc:RibbonButton x:Uid="ribbon:RibbonButton_6" SmallImage="Images\SmallIcon.png" Content="Delete" Click="ResourceDelete"
                                         Localization.Attributes="$Content(Unreadable Unmodifiable) SmallImageSource(Unreadable Unmodifiable) Label(Readable Modifiable)"
                                         Localization.Comments="Label(the button text for deleting a resource)"/>
                        </odc:RibbonGroup>

                        <odc:RibbonGroup x:Uid="ribbon:RibbonGroup_3">
                            <odc:RibbonButton x:Uid="OpenEdit" x:Name="OpenEdit"
                                         Content="Edit"
                                         LargeImage="Images\edit.png"
                                         Click="ResourceEdit"/>

                        </odc:RibbonGroup>

                        <odc:RibbonGroup x:Uid="CustomGroup3" x:Name="CustomGroup3" Title="custom"/>

                    </odc:RibbonTabItem>
                    
                </odc:RibbonContextualTabSet>
                
            </odc:RibbonBar.ContextualTabSets>
            
            <odc:RibbonTabItem x:Uid="HomeTab" x:Name="HomeTab" Title="Home"
                              Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable)">
            </odc:RibbonTabItem>
            
            
        </odc:RibbonBar>

        <inter:CCResourceCatalog x:Uid="TreeView" Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="3"
                              x:Name="TreeView" MouseDoubleClick="ResourceOpen"
                              ImportDropped="True"/>
        
        <odc:BreadcrumbBar x:Uid="breadcrumb" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="5" x:Name="breadcrumb"
                           IsEditable="False" ImageBinding="{Binding Path=Icon}" TraceBinding="{Binding Path=Name}"
                           SelectedBreadcrumbChanged="ResourceOpen" SeparatorString="/"
                           Localization.Attributes="$Content(Unreadable Unmodifiable) Name(Unreadable Unmodifiable) Path(Unreadable Unmodifiable) Margin(Unreadable Unmodifiable)">
            
            <odc:BreadcrumbBar.BreadcrumbItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=children}">
                    
                    <TextBlock Text="{Binding Path=Name}"/>

                </HierarchicalDataTemplate>
            </odc:BreadcrumbBar.BreadcrumbItemTemplate>

        </odc:BreadcrumbBar>
        
        <TabControl x:Uid="Tabs" x:Name="Tabs" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="3" SelectionChanged="TabChanged"
                    IsSynchronizedWithCurrentItem="True"/>
        
        <Button Margin="2" VerticalContentAlignment="Center" Width="20" Height="20" HorizontalContentAlignment="Center" Grid.Column="2" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Right" Click="TabOpen">
            <TextBlock Text="+" FontWeight="Bold"/>
        </Button>

        <StatusBar x:Uid="StatusBar_1" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="5" Grid.RowSpan="1">
            
            <StatusBarItem x:Uid="StatusBarItem_1">
                
                <StackPanel x:Uid="StackPanel_7" Orientation="Horizontal">
                    
                    <TextBlock x:Uid="CurrentAction" x:Name="CurrentAction" MinWidth="150"
                               Localization.Attributes="$Content(Unreadable Unmodifiable) MinWidth(Unreadable Unmodifiable)"/>
                    
                    <ProgressBar x:Uid="CurrentActionProgress" x:Name="CurrentActionProgress" Width="100"
                                 Localization.Attributes="$Content(Unreadable Unmodifiable) Width(Unreadable Unmodifiable)"/>
                    
                </StackPanel>
                
            </StatusBarItem>
            
            <Separator x:Uid="Separator_1" Height="15" Background="Gray" Width="1"
                       Localization.Attributes="$Content(Unreadable Unmodifiable) Background(Unreadable Unmodifiable) Width(Unreadable Unmodifiable) Height(Unreadable Unmodifiable)"/>
            
            <StatusBarItem x:Uid="StatusBarItem_2">
                
                <TextBlock x:Uid="CurrentModule" x:Name="CurrentModule" MinWidth="250"
                           Localization.Attributes="$Content(Unreadable Unmodifiable) MinWidth(Unreadable Unmodifiable)"/>
                
            </StatusBarItem>
            
            <Separator x:Uid="Separator_2" Height="15" Background="Gray" Width="1"
                       Localization.Attributes="$Content(Unreadable Unmodifiable) Background(Unreadable Unmodifiable) Width(Unreadable Unmodifiable) Height(Unreadable Unmodifiable)"/>
            
        </StatusBar>
        
    </Grid>
</odc:RibbonWindow>
