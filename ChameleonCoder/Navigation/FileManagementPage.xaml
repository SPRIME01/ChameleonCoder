<nav:CCPageBase x:Class="ChameleonCoder.Navigation.FileManagementPage" x:ClassModifier="internal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:cc="clr-namespace:ChameleonCoder"
      xmlns:nav="clr-namespace:ChameleonCoder.Navigation">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--all files (& dirs ?)-->
        <TreeView ItemsSource="{Binding Path=AllFiles}"
                  Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
            <TreeView.ItemTemplate>
                <DataTemplate>
                    <!--use name instead?-->
                    <TextBlock Text="{Binding Path=FilePath}"/>
                </DataTemplate>
            </TreeView.ItemTemplate>            
        </TreeView>

        <!--references-->
        <ListView Grid.Column="1" Grid.Row="1">
            
        </ListView>

        <!--metadata-->
        <ListView SelectedItem="{Binding Path=ActiveMetadata}" ItemsSource="{Binding Path=Metadata}"
                  Grid.Column="2" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="{Binding Path=MetadataKey}" DisplayMemberBinding="{Binding Path=Key}"/>
                    <GridViewColumn Header="{Binding Path=MetadataValue}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Path=Value, Mode=OneWay}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!--changelog-->
        <ListView Grid.Column="2" Grid.Row="0">
            
        </ListView>
        
    </Grid>
</nav:CCPageBase>
