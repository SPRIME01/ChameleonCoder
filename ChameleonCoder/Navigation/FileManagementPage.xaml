<nav:CCPageBase x:Class="ChameleonCoder.Navigation.FileManagementPage" x:ClassModifier="internal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:cc="clr-namespace:ChameleonCoder"
      xmlns:nav="clr-namespace:ChameleonCoder.Navigation">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TreeView ItemsSource="{Binding Path=AllFiles}"
                  Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
            <!--all files-->
        </TreeView>
        
        <ListView Grid.Column="1" Grid.Row="1">
            <!--references-->
        </ListView>
        
        <ListView ItemsSource="{Binding Path=Metadata}" Grid.Column="2" Grid.Row="1">
            <!--metadata-->
        </ListView>
        
        <ListView Grid.Column="2" Grid.Row="0">
            <!--changelog-->
        </ListView>
        
    </Grid>
</nav:CCPageBase>
