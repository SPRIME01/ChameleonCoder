<!-- the only purpose of this file is to define globally used resources and to call ChameleonCoder.App.InitHandler() on startup. -->
<Application x:Class="ChameleonCoder.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:res="clr-namespace:ChameleonCoder.Resources;assembly=ChameleonCoder.Shared"
             Startup="InitHandler">
    <Application.Resources>
        <res:ResourceCollection x:Key="resources"/>
        <res:ResourceCollection x:Key="resourceHierarchy"/>
    </Application.Resources>
</Application>