<Application x:Class="ChameleonCoder.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:ChameleonCoder"
             xmlns:conv="clr-namespace:ChameleonCoder.Converter"
             xmlns:res="clr-namespace:ChameleonCoder.Resources"
             xmlns:resman="clr-namespace:ChameleonCoder.Resources.Management"
             Startup="Init">
    <Application.Resources>
        <res:ResourceCollection x:Key="resources"/>
        <res:ResourceCollection x:Key="resourceHierarchy"/>
        
        <resman:ResourceTypeCollection x:Key="ResourceTypes"/>

        <conv:ResourceTypeConverter x:Key="TypeConverter"/>
        <conv:ResourceImageConverter x:Key="ImageConverter"/>
        <conv:ModuleIconConverter x:Key="ModuleIconConverter"/>
        <conv:ResourceTypeImageConverter x:Key="TypeImageConverter"/>
        <conv:CustomGroupConverter x:Key="CustomGroupConverter"/>
        <conv:ColorConverter x:Key="ColorConverter"/>
    </Application.Resources>
</Application>
