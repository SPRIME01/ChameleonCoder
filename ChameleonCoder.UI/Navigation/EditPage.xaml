<Page x:Class="ChameleonCoder.UI.Navigation.EditPage" x:ClassModifier="internal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit">
    <avalon:TextEditor x:Name="editor" x:FieldModifier="private"
                       ShowLineNumbers="True"
                       FontSize="{Binding CodeFontSize}"
                       FontFamily="{Binding CodeFont}"
                       Document="{Binding Document}"
                       SyntaxHighlighting="{Binding Highlighting}"/>
</Page>
